<h1>Listing issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Resolved?</th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td>#<%= issue.number %></td>
        <td><%= issue.title %></td>
        <td><%= issue.closed ? "yes" : "no" %></td>
      </tr>
    <% end %>
  </tbody>
</table>