# To use debugger
gem 'debugger'

# Handy helper for the console (ap my_vars)
gem 'awesome_print'

# Catch development emails
gem 'mailcatcher'

# Relaunch specs automagically
gem 'guard-rspec'

# Coveralls
gem 'coveralls', require: false

# Annotate models on migrations
gem "annotate", "2.6.0.beta2"